{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "hub-ui: dev",
      "type": "process",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "vite",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*VITE v",
            "endsPattern": "^\\s*(?:Local|Network):\\s+https?://"
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
